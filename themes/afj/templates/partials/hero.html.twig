<section id="{{ id }}"
    class="section modular-hero hero
        {{ page.header.hero_classes }}
        {{ page.header.background.parallax ? 'parallax' : '' }}"
    style="{% if hero_image %}
            background-image: url('{{ hero_image.url }}');
        {% endif %}
        {% if page.header.hero_arrow == false %}
            padding-bottom:4rem;
        {% endif %}"
    >
        <div class="night">
            <div class=" shooting-star"></div>
            <div class=" shooting-star"></div>
            <div class=" shooting-star"></div>
        </div>
    <div class="image-overlay"></div>
    <section class="container columns {{ grid_size }}"
        style="
            text-align: {{ page.header.hero_align|default('center') }};
            justify-content: center;
            align-items: center;
            padding-top: 1rem;">
        {% if hero_visual %}
        <div class="column col-auto" style="max-width: 100%;">
        {{ hero_visual.resize(400).html(
            'Logo AFJ',
            'Association Fran√ßaise de Jonglerie')
            |raw }}
        </div>
        {% endif %}
        <div class="column">{{ content|raw }}</div>
    </section>
    {% if page.header.hero_arrow or page.header.hero_arrow is null %}
        <i id="to-start" class="pulse fa fa-angle-down"></i>
    {% endif %}
</section>
