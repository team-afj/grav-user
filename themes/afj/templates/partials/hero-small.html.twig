{% set hero_img = hero_image ? hero_image.url : 
    media['image://hero.jpg'].url %}

{# If we are in a book we show it's title in every subpages #}
{% set book_root = get_book_root(page) %}
{% set title = book_root ? book_root.title : page.title %}

<section id="{{ id }}"
    class="section hero for-title text-light overlay-dark-gradient"
    style="background-image: url('{{ hero_img }}'); overflow: hidden;">
    <div class="image-overlay overlay-dark"></div>
    <div class="hero-ball">
        <img src="{{ media['image://ball.svg'].url }}" />
    </div>
    <section class="container text-center" style="z-index: 2">
        <h1>{{ title }}</h1>
    </section>
</section>
